{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch npm run dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "trace": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Node",
      "type": "node",
      "request": "attach",
      "port": 3000,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": ["Launch npm run dev", "Attach to Chrome", "Attach to Node"]
    }
  ]
}
