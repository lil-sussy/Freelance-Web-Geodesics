{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*"
      }
    },
    {
      "name": "Next.js: Debug Backend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/.next/**/*.js"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Next.js: Fullstack Debug",
      "configurations": [
        "Next.js: Debug Frontend",
        "Next.js: Debug Backend"
      ]
    }
  ]
}